{
  "widget": {
    "manifest_version": "1.0",
    "name": "widget.name",
    "description": "widget.description",
    "short_description": "widget.short_description",
    "tour_description": "widget.tour_description",
    "version": "1.0.14",
    "interface_version": 3,
    "init_once": false,
    "locale": ["ru", "en"],
    "installation": true,
    "support": {
      "link": "https://alerom2006.github.io/Calendar/",
      "email": "your-email@example.com"
    },
    "content_security_policy": "script-src 'self' https://cdn.amocrm.ru 'unsafe-inline' 'unsafe-eval'; connect-src 'self' https://*.amocrm.ru; frame-src 'self' https://*.amocrm.ru; object-src 'self'"
  },

  "locations": ["lcard-1", "lcard-2", "settings"],
  "settings": {
    "api_key": {
      "name": "widget.api_key",
      "type": "text",
      "required": true
    },
    "account": {
      "name": "widget.account",
      "type": "text",
      "required": true
    },
    "language": {
      "name": "widget.language",
      "type": "text",
      "required": false
    },
    "deal_date_field_id": {
      "name": "widget.deal_date_field",
      "type": "text",
      "required": true
    },
    "delivery_range_field": {
      "name": "widget.delivery_range",
      "type": "text",
      "required": false
    }
  }
}
