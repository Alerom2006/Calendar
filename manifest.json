{
  "widget": {
    "manifest_version": "1.0",
    "name": "Календарь заказов",
    "description": "Виджет для отображения сделок по дате заказа",
    "short_description": "Показывает заказы в календаре",
    "version": "1.0.4",
    "interface_version": 2,
    "init_once": false,
    "locale": ["ru"],
    "installation": true,
    "support": {
      "link": "https://alerom2006.github.io/Calendar/",
      "email": "your-email@example.com"
    },
    "url": "https://alerom2006.github.io/Calendar/"
  },
  "integration": {
    "type": "widget",
    "view": {
      "leads": "sidebar"
    },
    "oauth": {
      "client_id": "6696f2d5-76c2-47fd-bec9-da46d382d511",
      "redirect_uri": "https://alerom2006.github.io/Calendar/oauth_callback.html"
    }
  },
  "locations": ["lcard-1", "settings"],
  "settings": {
    "deal_date_field_id": {
      "name": "ID поля даты заказа",
      "type": "number",
      "required": true,
      "default": 885453
    },
    "delivery_range_field": {
      "name": "ID поля диапазона доставки",
      "type": "number",
      "required": false,
      "default": 892009
    }
  },
  "required_scopes": ["leads_read", "contacts_read"]
}
